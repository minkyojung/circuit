# Environment Variables Configuration
# Copy this file to .env.development or .env.production and configure values

# Feature Flags
# Controls which features are enabled/disabled in the application

# Plan Mode - AI-powered task planning with automatic todo generation
# Set to 'true' to enable Plan Mode feature
# Set to 'false' to disable Plan Mode feature (button will be hidden)
# Default: false (disabled in production until stable)
VITE_FEATURE_PLAN_MODE=false

# Git Graph - Commit history visualization
# Set to 'true' to show Git Graph instead of MCP Timeline
# Set to 'false' to show MCP Timeline (default for MCP-focused workflow)
# Default: false (MCP Timeline is the new default)
VITE_FEATURE_GIT_GRAPH=false
